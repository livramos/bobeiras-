#variaveis 
l_senha=[]
l_email=[]
l_conta = []
l_total_contas = []

#funções 
def criarconta(resposta):
    
    s_email = input('Insira seu endereço de email: ')
    s_senha = input('Crie uma senha: ')
    l_email.append(s_email)
    l_senha.append(s_senha)
    l_conta.append(l_senha)
    l_conta.append(l_email)
    l_total_contas.append(l_conta)
    return l_total_contas

def ja_tenho_conta ():
    return 

def log_in_true (variavel,l_variavel):
    for item in l_variavel:
     return item == variavel

def log_in_false(variavel,l_variavel,variavel2,l_variavel2):
    verificar_email= log_in_true(variavel,l_variavel)
    verificar_senha= log_in_true(variavel2, l_variavel2)
    if verificar_email and verificar_senha: 
     print('entrou parabens')
    else: 
        print('sua senha está incorreta')
        mudar_senha= input('deseja mudar de senha(sim ou não)? ')
        if mudar_senha=="sim":
          email_mudar=input('coloque seu email: ')
          mudar_senha(email_mudar,l_total_contas)
          ja_tenho_conta()
          return 
        elif mudar_senha=="não":
            print('ta bom então')
            exit(1)
            return
        else: 
            print('resposta invalida')
            log_in_false(variavel, l_variavel, variavel2, l_variavel2)
            return
 
def mudar_senha(variavel,l_variavel):
    for item in l_variavel:
        if type(item)!=str:
            mudar_senha(item, l_variavel)
        else: 
           if item == variavel: 
               new_variavel=input('coloque sua nova senha: ')
               l_variavel[1]= new_variavel
               return l_variavel
           else:
               print ('email invalido') 
               denovo=input ('Insira novamente o email cadastro: ')
               mudar_senha(denovo, l_variavel)
               return 
               
 
    
